<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF4206" />
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270"
            android:pivotX="50%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="#E74411" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270"
            android:pivotX="0%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#E74411" />
            </shape>
        </rotate>
    </item>
</layer-list>